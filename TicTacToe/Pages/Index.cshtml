@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Tic Tac Toe</h1>
<h1>
    <a asp-page="/Checkers">Play Checkers</a>
</h1>
<p>
    <a asp-page="/ServerTicTacToe">Go to TicTacToe page</a>
</p>
<div id="grid">
    @for(int i = 0; i < 9; i++)
    {
        <div id="square-@i" class="square"></div>
    }
</div>
<p id="turn"></p>